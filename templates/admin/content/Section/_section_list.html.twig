{# List school section #}

{% extends 'admin/_base_admin.html.twig' %}
{% set menu_section = true %}
{% block title %}Niveau{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="c-grey-900 mB-20">Liste des sections</h4>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="{{ path('section_manage') }}" class="btn btn-primary">Nouveau</a>
                    </div>
                </div>
                <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for section in sections %}
                        <tr>
                            <td>{{ section.name }}</td>
                            <td>
                                <a class="btn btn-outline-success btn-sm" title="Modifier"
                                   href="{{ path('section_manage',{'id': section.id}) }}">
                                    <i class="ti-pencil"></i>
                                </a>
                                <a class="btn btn-outline-primary btn-sm" title="Liste classe"
                                   href="{{ path('class_room_list',{'id': section.id}) }}">
                                    <i class="ti-list"></i>
                                </a>
                                <a class="btn btn-outline-danger btn-sm" title="Supprimer"
                                   href="{{ path('section_remove',{'id':section.id}) }}">
                                    <i class="ti-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}